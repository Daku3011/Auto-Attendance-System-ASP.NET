@model DemoAAS.Models.Student

@{
    ViewData["Title"] = "Delete Student";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="glass-card p-4">
            <h2 class="text-danger mb-4">Delete Student</h2>
            
            <div class="alert alert-danger">
                <strong>Warning!</strong> Are you sure you want to delete this student?
            </div>
            
            <dl class="row">
                <dt class="col-sm-4">Name</dt>
                <dd class="col-sm-8">@Model.Name</dd>
                
                <dt class="col-sm-4">Roll No</dt>
                <dd class="col-sm-8">@Model.RollNo</dd>
                
                <dt class="col-sm-4">Department</dt>
                <dd class="col-sm-8">@Model.Department</dd>
                
                <dt class="col-sm-4">Photos</dt>
                <dd class="col-sm-8">@Model.Photos.Count photo(s)</dd>
            </dl>
            
            @if (Model.ReferenceImage != null)
            {
                var base64 = Convert.ToBase64String(Model.ReferenceImage);
                var imgSrc = String.Format("data:image/jpg;base64,{0}", base64);
                <div class="text-center mb-3">
                    <img src="@imgSrc" style="max-width: 150px; border-radius: 10px;" alt="Student Photo" />
                </div>
            }
            
            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="StudentId" />
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-danger">Delete</button>
                    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>
