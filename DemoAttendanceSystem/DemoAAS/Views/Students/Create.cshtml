@model DemoAAS.Models.Student

@{
    ViewData["Title"] = "Create Student";
}

<div class="row justify-content-center">
    <div class="col-md-8">
        <div class="glass-card p-4">
            <h2 class="mb-4">Create New Student</h2>
            
            <form asp-action="Create" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                
                <div class="mb-3">
                    <label asp-for="Name" class="form-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                
                <div class="mb-3">
                    <label asp-for="RollNo" class="form-label"></label>
                    <input asp-for="RollNo" class="form-control" />
                    <span asp-validation-for="RollNo" class="text-danger"></span>
                </div>
                
                <div class="mb-3">
                    <label asp-for="Department" class="form-label"></label>
                    <input asp-for="Department" class="form-control" />
                    <span asp-validation-for="Department" class="text-danger"></span>
                </div>
                
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label asp-for="Semester" class="form-label"></label>
                        <input asp-for="Semester" class="form-control" />
                        <span asp-validation-for="Semester" class="text-danger"></span>
                    </div>
                    
                    <div class="col-md-6 mb-3">
                        <label asp-for="Division" class="form-label"></label>
                        <input asp-for="Division" class="form-control" />
                        <span asp-validation-for="Division" class="text-danger"></span>
                    </div>
                </div>
                
                <div class="mb-3">
                    <label class="form-label">Reference Photos (3-5 recommended)</label>
                    <input type="file" name="photos" id="photoInput" class="form-control" multiple accept="image/*" />
                    <div class="form-text">Select 3-5 photos for better recognition accuracy. Different angles and lighting recommended.</div>
                </div>
                
                <div id="photoPreview" class="row g-2 mb-3" style="display: none;">
                    <!-- Photo previews will be inserted here -->
                </div>
                
                <div class="d-flex gap-2">
                    <button type="submit" class="btn btn-primary">Create</button>
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        document.getElementById('photoInput').addEventListener('change', function(e) {
            const preview = document.getElementById('photoPreview');
            preview.innerHTML = '';
            
            const files = Array.from(e.target.files).slice(0, 5); // Limit to 5
            
            if (files.length > 0) {
                preview.style.display = 'flex';
                
                files.forEach((file, index) => {
                    const reader = new FileReader();
                    reader.onload = function(event) {
                        const col = document.createElement('div');
                        col.className = 'col-md-2';
                        col.innerHTML = `
                            <div class="card bg-dark border-secondary">
                                <img src="${event.target.result}" class="card-img-top" style="height: 120px; object-fit: cover;">
                                <div class="card-body p-2 text-center">
                                    <small class="text-muted">Photo ${index + 1}</small>
                                </div>
                            </div>
                        `;
                        preview.appendChild(col);
                    };
                    reader.readAsDataURL(file);
                });
            } else {
                preview.style.display = 'none';
            }
        });
    </script>
}
